<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link href="https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css" rel="stylesheet"
    type="text/css" />

  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <title>Index page</title>
</head>

<body>
  <div class="d-flex justify-content-end mt-3">
        <button class="RegularButton-primary-220 ">
            <a href="/updateAllTurorial"> Update All Record</a>
        </button>
        <button class="RegularButton-primary-220 ">
          <a href="/updateTopic"> Update Topics</a>
      </button>
    
</div>
    <div class="container">
      <div class="row">
        <% if (error!==undefined) { %>
         
            <div class="alert alert-danger mb-4" role="alert">
              <%= error %>
            </div>

            <%} %>
            <!-- Create Topic card -->
              <div class="col-md-6 d-flex justify-content-center" style="height:350px">
                <form action="/createTopic" method="POST" class="card-white">



                  <div class="CardHeader-cardHeaderText-481">
                    <h4 class="Connect\(LogIn\)-cardTitle-22">Create Topics</h4>
                  </div>

                  <div class="CardBody-cardBody-100">
                    <input type="number" name="topicOrder" placeholder="Enter TopicOrder"
                      style="margin-bottom: 20px; width: 100%" required />

                    <input type="text" name="topicName" placeholder="Enter TopicName"
                      style="margin-bottom: 20px; width: 100%" required />
                    </br>

                  </div>
                  <div class="CardFooter-cardFooter-122">
                    <button class="RegularButton-primary-220" style="width: 100%; margin-right:0" type="submit">
                      Create Topics
                    </button>
                  </div>
                </form>
              </div>

               <!-- create sub topic card -->
              <div class="col-md-6 d-flex justify-content-center">

                <form method="post" enctype="multipart/form-data" action="/createSubTopic" class="card-white">

                  <div class="CardHeader-cardHeaderText-481">
                    <h4 class="Connect\(LogIn\)-cardTitle-22">Create SubTopics</h4>
                  </div>

                  <div class="CardBody-cardBody-100">
                    <div class=" d-flex align-items-center">
                      <p style="margin-top:18px"> Select TopicOrder : </p> <select class="form-select" name="topicOrder"
                        id="topicOrder" style="width: 160px;
                  margin-right: 20px;">

                        <% if (topicOrder&&topicOrder.length===0) { %>
                          <option value="NoOrg" id="NoOrg">No Topic Found</option>

                          <%} else { %>

                            <% for(var i=0; i<topicOrder.length; i++) {%>

                              <option value="<%= topicOrder[i].topicOrder %> - <%= topicOrder[i].topicName %>"
                                id="<%= topicOrder[i].topicOrder %> - <%= topicOrder[i].topicName %>">
                                <%= topicOrder[i].topicOrder %> - <%= topicOrder[i].topicName %>
                              </option>

                              <% } %>
                                <% } %>
                      </select>
                    </div>
                    </br>
                    SubTopicOrder: <input type="number" name="subTopicOrder" placeholder="Enter SubTopicOrder"
                      style="margin-bottom: 20px; width: 100%" required />

                      SubTopicName: <input type="text" name="subTopicName" placeholder="Enter SubTopicName"
                      style="margin-bottom: 20px; width: 100%" required />
                    
                      PageHeader:  <input type="text" name="pageHeader" placeholder="Enter PageHeader"
                      style="margin-bottom: 20px; width: 100%" required />
                      VideoLink: <input type="text" name="videoLink" placeholder="Enter VideoLink"
                      style="margin-bottom: 20px; width: 100%" required />
                      Upload file : <input id="images" type="file" multiple name="images" placeholder="Enter Images"
                      style="margin-bottom: 20px; width: 100%;" />

                      TextContent:  <textarea name="textContent" placeholder="Enter TextContent"
                      style="margin-bottom: 20px; width: 100%"></textarea>
                

                  </div>
                  <div class="CardFooter-cardFooter-122">
                    <button class="RegularButton-primary-220" style="width: 100%; margin-right:0" type="submit">
                      Create SubTopics
                    </button>
                  </div>
                </form>
              </div>

      </div>
    
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js"></script>
<script>
  
 new FroalaEditor('textarea');
</script>


</html>